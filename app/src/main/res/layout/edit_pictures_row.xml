<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/edit_pictures_row_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="10dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/edit_pictures_row_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@android:color/black"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/edit_pictures_row_uri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edit_pictures_row_image"
                android:layout_toEndOf="@+id/edit_pictures_row_image"
                android:layout_toRightOf="@+id/edit_pictures_row_image"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/edit_pictures_row_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edit_pictures_row_uri"
                android:layout_alignStart="@+id/edit_pictures_row_uri"
                android:layout_below="@+id/edit_pictures_row_uri"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
